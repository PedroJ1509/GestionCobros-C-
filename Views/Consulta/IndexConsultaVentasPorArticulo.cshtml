    <script asp-append-version="true" src="~/assets/dist/js/consVentaPorArticulo.js"></script>

    <script>
        $(".op-menu").removeClass('active');
        $("#group-consulta,#op-mat-consultaventasporarticulo").addClass('active');
    </script>
 }