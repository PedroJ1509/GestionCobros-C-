@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>JaMPe Software</title>

    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="assets/dist/img/ico/ico.ico" type="image/x-icon">
    <!-- Bootstrap -->
    <link href="assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Pe-icon-7-stroke -->
    <link href="assets/pe-icon-7-stroke/css/pe-icon-7-stroke.css" rel="stylesheet" />
    <!-- style css -->
    <link asp-append-version="true" href="assets/dist/css/stylecrm.css" rel="stylesheet" />
    <link href="~/assets/plugins/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />

</head>
<body>
    <!-- Content Wrapper -->
    <div class="login-wrapper">

        <div class="container-center" style="margin-top: 5%;">
            <div class="img-log m-b-20 p-b-20">
                <img class="img-fluid" src="~/assets/dist/images/logo03.png?1" />
            </div>
            <div class="login-area">
                <div class="card panel-custom">
                    <div class="card-heading custom_head">
                        <div class="view-header">
                            <div class="header-icon">
                                <i class="pe-7s-unlock"></i>
                            </div>
                            <div class="header-title">
                                <h3>Login</h3>
                                <small><strong>Por favor digita tu usuario para entrar al sistema.</strong></small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="loginForm">
                            <div class="form-group">
                                <label class="control-label" for="username">Usuario</label>
                                <div class="">
                                    <input type="text" data-sigfocus="txtContrasena" placeholder="Usuario" title="Por favor digita tu usuario" required="" value="" name="txtUsuario" id="txtUsuario" class="form-control">
                                    <div class="invalid-feedback">
                                        <span data-labelidioma="label_form_formulario_error" class="label-idioma">Debe completar este campo.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="password">Contraseña</label>
                                <div class="">
                                    <input type="password"  data-sigfocus="btnEntrar" title="Por favor digita tu Contraseña" placeholder="******" required="" value="" name="txtContrasena" id="txtContrasena" class="form-control">
                                    <div class="invalid-feedback">
                                        <span data-labelidioma="label_form_formulario_error" class="label-idioma">Debe completar este campo.</span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button id="btnEntrar" type="button" onclick="login.EntrarSistema()" class="btn green_btn">
                                    <span class="spinner-border spinner-border-sm spinner_cargando hide" style="display: none;" role="status" aria-hidden="true"></span>
                                    <span class="label_cargando hide" style="display: none;">Loading...</span>
                                    <span class="label_bnormal"> Entrar</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-wrapper -->
    <!-- jQuery -->
    <script src="assets/plugins/jQuery/jquery-1.12.4.min.js"></script>
    <script src="~/assets/plugins/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <!-- Bootstrap proper -->
    <script src="assets/bootstrap/js/popper.min.js"></script>
    <!-- Bootstrap -->
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script asp-append-version="true" src="~/assets/dist/js/funcionesGenerales.js"></script>
    <script asp-append-version="true" src="~/assets/dist/js/login.js"></script>
</body>
</html>