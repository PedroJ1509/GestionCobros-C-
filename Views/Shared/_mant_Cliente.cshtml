<!-- ADD Modal1 -->
<div class="modal fade" id="mant-cliente" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-completo">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h3><i class="fa fa-user m-r-5"></i> Clientes</h3>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="form-horizontal">
                            <input type="text" id="txtClienteId" value="0" placeholder="" class="oculto">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Nombre:</label>
                                        <div class="col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9 p-0">
                                            <input type="text" data-sigfocus="txtClienteDireccion" id="txtClienteNombre" placeholder="" class="form-control">
                                            <div class="invalid-feedback">
                                                <span data-labelidioma="label_form_formulario_error" class="label-idioma">Debe completar este campo.</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Dirección:</label>
                                        <input type="text" data-sigfocus="txtClienteCedula" placeholder="" id="txtClienteDireccion" class="form-control col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9">
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Cédula/RNC:</label>
                                        <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4 col-xl-4 p-0">
                                            <input type="text" data-sigfocus="txtClienteTelefono" placeholder="" maxlength="13" id="txtClienteCedula" class="form-control">
                                            <div class="invalid-feedback">
                                                <span data-labelidioma="label_form_formulario_error" class="label-idioma">Debe completar este campo.</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-5 col-xl-5" style="padding-right: 0;">
                                            <button type="button" style="width: 100%;" onclick="mantCliente.ConsultarRncDgi()" id="btnConsultarDGI" class="btn btn-info btn-sm">
                                                <span class="spinner-border spinner-border-sm spinner_cargando hide" style="display: none;" role="status" aria-hidden="true"></span>
                                                <span class="label_cargando hide" style="display: none;">Loading...</span>
                                                <span class="label_bnormal"> Consultar RNC DGI</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Teléfono:</label>
                                        <input type="text" data-sigfocus="txtClienteEmail" maxlength="15" placeholder="" id="txtClienteTelefono" class="form-control col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9">
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Email:</label>
                                        <input type="email" data-sigfocus="txtContacto" placeholder="" id="txtClienteEmail" class="form-control col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9">
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Contacto:</label>
                                        <input type="text" data-sigfocus="cmbTipoCliente" placeholder="" id="txtContacto" class="form-control col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9">

                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Tipo Cliente:</label>
                                        <div class="col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9 p-0">
                                            <select data-sigfocus="cmbVendedor" id="cmbTipoCliente" class="form-control">
                                            </select>
                                            <div class="invalid-feedback">
                                                <span data-labelidioma="label_form_formulario_error" class="label-idioma">Debe completar este campo.</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Vendedor:</label>
                                        <div class="col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9 p-0">
                                            <select data-sigfocus="cmbTipoComprobante" class="form-control" id="cmbVendedor">
                                            </select>
                                            <div class="invalid-feedback">
                                                <span data-labelidioma="label_form_formulario_error" class="label-idioma">Debe completar este campo.</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Comprobante:</label>
                                        <select data-sigfocus="cmbPlan" id="cmbTipoComprobante" class="form-control col-xs-6 col-sm-6 col-md-4 col-lg-9 col-xl-9">
                                        </select>
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Plan:</label>
                                        <select data-sigfocus="cmbPrecio" id="cmbPlan" class="form-control col-xs-6 col-sm-6 col-md-4 col-lg-9 col-xl-9">
                                        </select>
                                    </div>
                                    <hr />
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Precio:</label>
                                        <select data-sigfocus="cmbCondicionPago" id="cmbPrecio" class="form-control col-xs-6 col-sm-6 col-md-4 col-lg-9 col-xl-9">
                                        </select>
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Cond. Pago:</label>
                                        <div class="col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9 p-0">
                                            <select data-sigfocus="txtLimiteCredito" id="cmbCondicionPago" onchange="mantCliente.CambioCondicionPago(this)" class="form-control">
                                            </select>
                                            <div class="invalid-feedback">
                                                <span data-labelidioma="label_form_formulario_error" class="label-idioma">Debe completar este campo.</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-group oculto">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Lím. crédito:</label>
                                        <input data-sigfocus="txtComentario" type="text" placeholder="" id="txtLimiteCredito" class="form-control col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9">
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">Comentario:</label>
                                        <input data-sigfocus="btnGuardar" type="text" placeholder="" id="txtComentario" class="form-control col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9">
                                    </div>
                                    <div class="row form-group">
                                        <label class="control-label col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-3"></label>
                                        <div class="checkbox checkbox-info col-xs-6 col-sm-6 col-md-5 col-lg-9 col-xl-9" style="padding-left: 3px;">
                                            <input id="chkActivo" type="checkbox">
                                            <label for="chkActivo">Activo</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="mantCliente.Cancelar()" class="btn btn-labeled btn-danger btn-sm"><span class="btn-label"><i class="fa fa-times"></i></span>Cancelar</button>
                <button type="button" onclick="mantCliente.Guardar()" id="btnGuardar" class="btn btn-labeled btn-add btn-sm">
                    <span class="spinner-border spinner-border-sm spinner_cargando hide" style="display: none;" role="status" aria-hidden="true"></span>
                    <span class="label_cargando hide" style="display: none;">Loading...</span>
                    <span class="label_bnormal"><span class="btn-label"><i class="fa fa-check"></i></span> Guardar</span>
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section Scripts{

    <script asp-append-version="true" src="~/assets/dist/js/mant_cliente.js"></script>
 }