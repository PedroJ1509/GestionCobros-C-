<!-- ADD Modal1 -->
<style>
    .totales{
        padding-left: 5px !important;
    }
</style>
<div class="modal fade" id="pant-factura" data-backdrop="static" data-keyboard="false" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-completo" style="margin-top: 8px;">
        <div class="modal-content" style="height: 640px;">
            <div class="modal-header modal-header-primary">
                <h3><i class="fa fa-user m-r-5"></i> Punto de Venta</h3>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8 col-xl-8">
                        <div class="row">
                            <div class="col-lg-12 pinpin">
                                <div id="content-factura-det" class="card" data-sortable="true">
                                    <div class="card-header">
                                        <div class="card-title custom_title m-0">
                                            <div class="btn-group buttonexport d-flex" role="group">
                                                <div class="input-group">
                                                    <input id="txtCodigoArt" type="text" class="form-control" style="height: 34px;">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text" id="basic-addon2"><a href="#"><i class="fa fa-barcode text-center"></i></a></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="table-responsive">
                                                <table id="dataTable-huesped" class="table display table-bordered table-striped table-hover no-wrap">
                                                    <thead class="back_table_color">
                                                        <tr>
                                                            <th>No.</th>
                                                            <th>Descripción</th>
                                                            <th>Cant</th>
                                                            <th>Precio</th>
                                                            <th>ITBIS</th>
                                                            <th>Importe</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="card-title custom_title m-0">

                                            <div class="row form-group">
                                                <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-3 p-0 totales">
                                                    <label class="">Sub Total:</label>
                                                    <div class="">
                                                        <input type="text" placeholder="" id="txtSubTotal" disabled value="" class="form-control text-uppercase">
                                                    </div>
                                                </div>
                                                <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-2 p-0 totales">
                                                    <label class="">ITBIS:</label>
                                                    <div class="">
                                                        <input type="text" placeholder="" disabled value="" id="txtITBIS" class="form-control text-uppercase">
                                                    </div>
                                                </div>
                                                <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-2 p-0 totales">
                                                    <label class="">Impuesto:</label>
                                                    <div class="">
                                                        <input type="text" placeholder="" disabled value="" id="txtImpuesto" class="form-control text-uppercase">
                                                    </div>
                                                </div>
                                                <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-2 p-0 totales">
                                                    <label class="">Desc.:</label>
                                                    <div class="">
                                                        <input type="text" placeholder="" disabled value="" id="txtDescuento" class="form-control text-uppercase">
                                                    </div>
                                                </div>
                                                <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-3 col-xl-3 p-0 totales">
                                                    <label class="">Total:</label>
                                                    <div class="">
                                                        <input type="text" placeholder="" disabled value="" id="txtTotal" class="form-control text-uppercase">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 col-xl-4">
                        <div class="row">
                            <div class="col-lg-12 pinpin">
                                <div id="content-factura-doc" class="card" data-sortable="true">
                                    <div class="card-header">
                                        <div class="card-title custom_title m-0">
                                            <button type="button" title="Nueva Factura" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-sticky-note-o"></i></button>
                                            <button type="button" title="Buscar Factura" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-history"></i></button>
                                            <button type="button" title="Buscar Cotización" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-share-square-o"></i></button>
                                            <button type="button" title="Cancelar Factura" class="btn btn-social-icon btn-vimeo m-b-5 float-r"><i class="fa fa-ban"></i></button>
                                        </div>
                                    </div>
                                    <div class="card-body p-l-0 p-r-0 p-t-0 p-b-0">
                                        <form>
                                            <input type="text" id="txtFacturaId" value="0" placeholder="" class="oculto">
                                            <input type="text" id="txtClienteContadoId" value="@ViewBag.ClienteContado" placeholder="" class="oculto">
                                            <input type="text" id="txtCondicionGeneralId" value="@ViewBag.CondicionGeneral" placeholder="" class="oculto">
                                            <input type="text" id="txtVendedorGeneralId" value="@ViewBag.VendedorGeneral" placeholder="" class="oculto">
                                            <input type="text" id="txtComprobanteGeneralId" value="@ViewBag.ComprobanteGeneral" placeholder="" class="oculto">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-hover m-0">
                                                    <tbody>
                                                        <tr>
                                                            <td style="width: 35%;"><strong>Factura No.</strong></td>
                                                            <td class="td-factura-header"><input type="text" id="txtFacturaNo" placeholder="" value="1454" class="form-control input-factura"></td>
                                                        </tr>
                                                        <tr>
                                                            <td style="width: 35%;"><strong>Fecha.</strong></td>
                                                            <td class="td-factura-header"><input type="text" id="txtFechaFactura" placeholder="" value="15/09/1985" class="form-control input-factura"></td>
                                                        </tr>
                                                        <tr>
                                                            <td style="width: 35%;"><strong>Cliente.</strong></td>
                                                            <td class="td-factura-header">
                                                                <select onchange="" id="cmbClienteFactura" class="form-control input-factura">
                                                                </select>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="width: 35%;"><strong>Condición</strong></td>
                                                            <td class="td-factura-header">
                                                                <select onchange="" id="cmbCondicion" class="form-control input-factura">
                                                                </select>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="width: 35%;"><strong>Vendedor.</strong></td>
                                                            <td class="td-factura-header">
                                                                <select onchange="" id="cmbVendedor" class="form-control input-factura">
                                                                </select>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="2" class="text-center" style="width: 35%;">
                                                                <select onchange="" id="cmbComprobante" class="form-control input-factura">
                                                                </select>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="width: 35%;"><strong>Comprobante</strong></td>
                                                            <td><span id="lblComprobante"></span></td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="2" class="text-center factura-sinabrir" style="width: 35%;"><strong id="lblStatusfactura">FACTURA SIN ABRIR</strong></td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="2" class="text-center factura-abierta" style="width: 35%;">
                                                                <button type="button" onclick="mantSala.Cancelar()" class="btn btn-labeled btn-danger btn-sm"><span class="btn-label"><i class="fa fa-times"></i></span>Cancelar</button>
                                                                <button type="button" onclick="mantSala.Guardar()" id="btnGuardar" class="btn btn-labeled btn-add btn-sm">
                                                                    <span class="spinner-border spinner-border-sm spinner_cargando hide" style="display: none;" role="status" aria-hidden="true"></span>
                                                                    <span class="label_cargando hide" style="display: none;">Loading...</span>
                                                                    <span class="label_bnormal"><span class="btn-label"><i class="fa fa-check"></i></span>Guardar</span>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer" id="content-factura-total">
                                        <label id="totalFactura">1,500.00</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<script asp-append-version="true" src="~/assets/dist/js/factura.js"></script>