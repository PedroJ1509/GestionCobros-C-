<style>
    .dt-buttons {
        top: 195px !important;
        position: initial !important;
    }

    .header-mant td, .totales td {
        padding-top: 2px !important;
        padding-bottom: 2px !important;
    }

    .botones-footer {
        padding: 5px 40px 5px 33px;
        text-align: right;
        display: block;
    }

    #content-filtro-articulo i {
        margin: 8px 13px 8px 13px;
    }
</style>
<div class="modal fade" id="pant-factura" data-backdrop="static" data-keyboard="false" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-completo">
        <div class="modal-content">
            <div class="modal-header modal-header-primary p-b-0">
                <h3 class="oculto">Crear/Editar Factura</h3>
                <div class="card-title custom_title m-0">
                    <button type="button" title="Nueva Factura" onclick="generarFactura.NuevaFactura()" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-sticky-note-o"></i></button>
                    <button type="button" title="Buscar Factura" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-history"></i></button>
                    <button type="button" title="Buscar Cotización" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-share-square-o"></i></button>
                    <button type="button" id="CmdCambiar" data-tag="0" title="Cambiar" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-vcard-o"></i></button>
                    <button type="button" id="CmdCambiarCliente" data-tag="0" title="Cambiar cliente" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-comments-o"></i></button>
                    <button type="button" id="CmdPreFactura" data-tag="0" title="PreFactura" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-newspaper-o"></i></button>
                    <button type="button" id="cmdComanda" data-tag="0" title="Comanda" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-coffee"></i></button>
                    <button type="button" id="btnAnularFactura" title="Cancelar Factura" class="btn btn-social-icon btn-vimeo m-b-5"><i class="fa fa-ban"></i></button>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="card caja-filtro" data-sortable="true">
                    <div class="card-body row" style="padding: 20px 20px 0 20px;">
                        <input type="text" placeholder="" id="txtFacturaId" value="0" class="form-control oculto">
                        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover header-mant" style="margin-bottom: 0;">
                                    <tbody>
                                        <tr>
                                            <td><strong>Factura No.</strong> </td>
                                            <td><input type="text" data-tag="0" data-sigfocus="txtClienteTelefono" placeholder="" maxlength="13" id="txtFacturaNo" disabled class="form-control"></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Cliente</strong></td>
                                            <td>
                                                <select data-sigfocus="cmbCondicionPago" data-tag="0" id="cmbClienteFactura" class="form-control">
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Almacen</strong> </td>
                                            <td>
                                                <select data-sigfocus="cmbCondicionPago" id="cmbAlmacen" class="form-control">
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Vendedor</strong> </td>
                                            <td>
                                                <select data-sigfocus="cmbCondicionPago" id="cmbVendedor" class="form-control">
                                                </select>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover header-mant">
                                    <tbody>
                                        <tr>
                                            <td><strong>Fecha</strong> </td>
                                            <td><input type="text" placeholder="" value="@DateTime.Now.ToString("dd/MM/yyyy")" id="txtFechaFactura" class="form-control text-uppercase"></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Condición</strong> </td>
                                            <td>
                                                <select data-sigfocus="cmbCondicionPago" id="cmbCondicion" class="form-control">
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Comprobante</strong> </td>
                                            <td>
                                                <select data-sigfocus="cmbCondicionPago" onchange="generarFactura.BuscarSigteComprobante()" id="cmbComprobanteFiscal" class="form-control">
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td> </td>
                                            <td><strong><label data-estadocomprobante="" data-comprobantecoment="" id="lblComprobante"></label></strong> </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card caja-filtro" data-sortable="true">
                    <div class="row p-20" style="padding: 5px 41px 0px 35px;">
                        <div class="btn-group buttonexport d-flex" id="content-filtro-articulo" role="group" style="width: 100%;">
                            <div class="input-group">
                                <input id="txtCodigoArt" type="text" class="form-control" style="height: 34px;">
                                <div class="input-group-append">
                                    <span class="input-group-text p-0" id="basic-addon2"><a id="btnBuscarArticulo" data-tag="0" href="#" data-toggle="modal" data-target="#buscar-articulos"><i class="fa fa-search text-center"></i></a></span>

                                    <span class="input-group-text p-0" id="basic-addon3"><a id="btnOk" data-tag="0" href="#"><i class="fa fa-barcode text-center"></i></a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row p-20" style="padding: 0px 20px 0 20px;">
                        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <div class="table-responsive">
                                <table id="dataTable-det-factura" class="table display table-bordered table-striped table-hover no-wrap">
                                    <thead class="back_table_color">
                                        <tr>
                                            <th>Código</th>
                                            <th>Descripción</th>
                                            <th class="text-right">Cantidad</th>
                                            <th>Unidad</th>
                                            <th class="text-right">Precio</th>
                                            <th class="text-right">ITBIS</th>
                                            <th class="text-right">Importe</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover totales">
                                    <tbody>
                                        <tr>
                                            <td><strong>Cantidad de item(s)</strong> </td>
                                            <td><span id="cantidad-item">0.00</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover totales">
                                    <tbody>
                                        <tr>
                                            <td class="text-right"><strong>Sub Total</strong> </td>
                                            <td class="text-right"><span id="factura-subtotal">0.00</span></td>
                                        </tr>
                                        <tr>
                                            <td class="text-right"><input id="ChkTax" checked type="checkbox"> <strong>ITBIS</strong> </td>
                                            <td class="text-right"><span id="factura-itbis">0.00</span> </td>
                                        </tr>
                                        <tr>
                                            <td class="text-right"><input id="chkImpuesto" type="checkbox"> <strong>% Ley</strong> </td>
                                            <td class="text-right"><span id="factura-ley">0.00</span></td>
                                        </tr>
                                        <tr>
                                            <td class="text-right"><input id="ChkDesc" type="checkbox"> <strong>Descuento</strong> </td>
                                            <td class="text-right"><span id="factura-descuento">0.00</span></td>
                                        </tr>
                                        <tr style="background: lightsteelblue;">
                                            <td class="text-right"><strong>Total</strong> </td>
                                            <td class="text-right"><span data-tag="false" id="factura-total">0.00</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row p-20 botones-footer" style="">
                        <button type="button" onclick="mantSala.Cancelar()" class="btn btn-labeled btn-inverse btn-sm"><span class="btn-label"><i class="fa fa-times"></i></span>Salir</button>
                        <button type="button" onclick="mantSala.Guardar()" id="btnGuardar" class="btn btn-labeled btn-add btn-sm">
                            <span class="spinner-border spinner-border-sm spinner_cargando hide" style="display: none;" role="status" aria-hidden="true"></span>
                            <span class="label_cargando hide" style="display: none;">Loading...</span>
                            <span class="label_bnormal"><span class="btn-label"><i class="fa fa-check"></i></span>Cerrar/Imprimir</span>
                        </button>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
