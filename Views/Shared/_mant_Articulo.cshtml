                                            <label for="chkItbis">ITBIS</label>
                                        </div>
                                        <div class="checkbox checkbox-info col-xs-6 col-sm-6 col-md-5 col-lg-6 col-xl-6">
                                            <input id="chkItbisIncluido" type="checkbox">
                                            <label for="chkItbisIncluido">ITBIS Incluido</label>
                                        </div>
                                    </div>
